    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var fileExists = false;
            var extensionExists = false;
            var correctFormat = false;

            function ShowError() {
                if (!fileExists) {
                    alert('There is no file for conversion');
                    return true;
                }
                else {
                    if (!extensionExists) {
                        alert('File does not have an extension');
                        return true;
                    }
                    else {
                        if (!correctFormat) {
                            alert('Your file format is not supported');
                            return true;
                        }
                    }
                }
                return false;
            }

            function CheckSupportedFormatsToMP3(fileUpload) {
                if ((null != fileUpload.value) && ("" != fileUpload.value)) {
                    fileExists = true;

                    var parts = fileUpload.value.split(".");
                    if (1 < parts.length) {
                        //Getting file's extension
                        var ext = parts[parts.length - 1];
                        if ((null != ext) && ("" != ext)) {
                            upperExt = ext.toUpperCase();
                            extensionExists = true;
                            correctFormat = ("WMA" == upperExt);
                        }
                        else {
                            extensionExists = false;
                        }
                    }
                    else {
                        extensionExists = false;
                    }
                }
                else {
                    fileExists = false;
                }

                return ShowError();
            }

            function CheckSupportedFormatsToWMA(fileUpload) {
                if ((null != fileUpload.value) && ("" != fileUpload.value)) {
                    fileExists = true;

                    var parts = fileUpload.value.split(".");
                    if (1 < parts.length) {
                        //Getting file's extension
                        var ext = parts[parts.length - 1];
                        if ((null != ext) && ("" != ext)) {
                            upperExt = ext.toUpperCase();
                            extensionExists = true;
                            correctFormat = ("MP3" == upperExt);
                        }
                        else {
                            extensionExists = false;
                        }
                    }
                    else {
                        extensionExists = false;
                    }
                }
                else {
                    fileExists = false;
                }

                return ShowError();
            }

    </script>
</head>

